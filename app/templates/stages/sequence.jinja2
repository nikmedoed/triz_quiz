{% extends 'base.jinja2' %}

{% block content %}
    {% if phase == 0 %}
        <div class="quiz-center">
            <h1>{{ step.title }}</h1>
            {% if step.text %}
                <div class="quiz-layout">
                    <div class="quiz-col">
                        <div class="quiz-description">{{ step.text }}</div>
                    </div>
                    <div class="quiz-col">
                        <ol class="quiz-options no-counter">
                            {% for opt in options %}
                                <li>{{ opt.text }}</li>
                            {% endfor %}
                        </ol>
                    </div>
                </div>
            {% else %}
                <div class="quiz-col">
                    <ol class="quiz-options quiz-options-alone no-counter">
                        {% for opt in options %}
                            <li>{{ opt.text }}</li>
                        {% endfor %}
                    </ol>
                </div>
            {% endif %}
        </div>
    {% else %}
        <div class="quiz-layout">
            <div class="quiz-col">
                <ol class="quiz-options">
                    {% for opt in options %}
                        <li>{{ opt.text }}</li>
                    {% endfor %}
                </ol>
            </div>
            <div class="quiz-col">
                <div>Верно: {{ correct_count }}</div>
                <div>Неверно: {{ wrong_count }}</div>
                {% if correct_users %}
                    <ul class="quiz-options no-counter">
                        {% for u in correct_users %}
                            <li>{{ u.name }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        </div>
    {% endif %}
{% endblock %}
