{% extends 'base.jinja2' %}

{% block content %}
  <h1>{{ step.title }}</h1>
  {% if phase == 0 %}
    <p class="description">{{ step.text }}</p>
  {% elif phase == 1 %}
    {% if ideas %}
      <p class="question">Голосование за идеи</p>
      <div class="ideas-grid">
        {% for idea in ideas %}
        <div class="idea-card">
          <div class="idea-text">{{ idea.text }}</div>
          <div class="idea-meta">ответ занял {{ idea.delay_text }}</div>
        </div>
        {% endfor %}
      </div>
    {% else %}
      <p class="question">Ответов нет</p>
    {% endif %}
  {% elif phase == 2 %}
    <div class="ideas-grid">
      {% for idea in ideas %}
      {% set voters = voters_map.get(idea.id) or [] %}
      <div class="idea-card">
        <div class="idea-vote-count">★ {{ voters|length }}</div>
        <div class="idea-text">{{ idea.text }}</div>
        <div class="idea-author"><img class="avatar small" src="/avatars/{{ idea.author.id }}.png" title="{{ idea.author.name }}" /> <span class="author-name">{{ idea.author.name }}</span></div>
        <div class="idea-meta">ответ занял {{ idea.delay_text }}</div>
        <div class="idea-voters">
          {% for v in voters %}
            <img src="/avatars/{{ v.id }}.png" title="{{ v.name }}" />
          {% endfor %}
        </div>
      </div>
      {% endfor %}
    </div>
  {% endif %}
{% endblock %}
